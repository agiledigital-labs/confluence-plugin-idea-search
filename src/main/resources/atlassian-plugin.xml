<atlassian-plugin
  key="${atlassian.plugin.key}"
  name="${project.name}"
  plugins-version="2"
>
  <blueprint
    content-template-key="ideaSearch-template"
    i18n-name-key="ideaSearch.blueprint.name"
    index-key="my-index"
    key="my-blueprint"
  >
    <dialog-wizard key="ideaSearch-wizard">
      <dialog-page
        description-content-key="ideaSearch.blueprint.wizard.page1.desc.content"
        description-header-key="ideaSearch.blueprint.wizard.page1.desc.header"
        id="page1Id"
        last="true"
        template-key="IdeaSearch.Blueprints.FedexIdea.page1Form"
        title-key="ideaSearch.blueprint.wizard.page1.title"
      />
    </dialog-wizard>
  </blueprint>

  <!-- add our i18n resource -->
  <content-template
    i18n-name-key="ideaSearch.blueprint.title"
    key="ideaSearch-template"
  >

    <context-provider
      class="au.com.agiledigital.idea_search.BlueprintContextProvider"
    />
    <resource
      location="/templates/blueprint.xml"
      name="template"
      type="download"
    />
  </content-template>

  <!-- add our web resources -->
  <plugin-info>
    <description>${project.description}</description>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
    <vendor
      name="${project.organization.name}"
      url="${project.organization.url}"
    />
    <version>${project.version}</version>
  </plugin-info>

  <resource location="ideaSearch" name="i18n" type="i18n" />

  <web-item
    i18n-name-key="ideaSearch.create-link.title"
    key="ideaSearch.idea-blueprint"
    section="system.create.dialog/content"
  >
    <description key="ideaSearch.create-link.description" />
    <param name="blueprintKey" value="my-blueprint" />
    <resource location="/images/myblueprint.png" name="icon" type="download" />
  </web-item>

  <!-- Add to the Create Menu -->
  <web-resource key="ideaSearch-page-resources" name="ideaSearch Web Resources">
    <context>ideaSearch</context>
    <dependency>com.atlassian.auiplugin:ajs</dependency>

    <resource
      location="/css/ideaSearch.css"
      name="ideaSearch.css"
      type="download"
    />
  </web-resource>


  <!-- Template for Blueprint -->
  <web-resource key="ideaSearch-resources" name="ideaSearch Web Resources">-->
    <context>create-content</context>
    <dependency>
      com.atlassian.confluence.plugins.confluence-create-content-plugin:resources
    </dependency>

    <dependency>com.atlassian.auiplugin:ajs</dependency>

    <resource
      location="/js/ideaSearch.js"
      name="ideaSearch.js"
      type="download"
    />
    <resource
      location="/soy/ideaSearch.soy"
      name="ideaSearch.soy.js"
      type="download"
    />
    <resource location="/images" name="images/" type="download" />
    <resource
      location="/css/ideaSearch.css"
      name="ideaSearch.css"
      type="download"
    />

    <transformation extension="soy">
      <transformer key="soyTransformer">
        <functions>com.atlassian.confluence.plugins.soy:soy-core-functions
        </functions>
      </transformer>
    </transformation>
  </web-resource>

  <xhtml-macro
    name="Idea Search Client Side Scripts"
    class="au.com.agiledigital.idea_search.macros.ClientSideScripts"
    key='ideaSearch-macro-clientSideScripts'
  >
    <description key="ideaSearch.macro.client-side-scripts.desc" />
    <category name="hidden" />
    <parameters />
  </xhtml-macro>

  <web-resource
    key="ideaSearch-macro-clientSideScripts-macro-resource"
    name="Client Side Scripts Web Resources"
  >
    <dependency>com.atlassian.auiplugin:ajs</dependency>

    <!--  Add Background resource loading here  -->
    <resource
      type="download"
      name="ideaSearch.css"
      location="/css/ideaSearch.css"
    />
  </web-resource>

  <xhtml-macro
    name="Idea Structured Field"
    class="au.com.agiledigital.idea_search.macros.StructuredField"
    key='ideaSearch-macro-structuredField'
  >
    <description key="ideaSearch.macro.structuredField.desc" />
    <category name="hidden" />
    <parameters>
      <parameter name="category" type="enum">
        <value name="technologies" />
      </parameter>
    </parameters>
  </xhtml-macro>

  <web-resource
    key="ideaSearch-macro-structuredField-macro-resource"
    name="Structured Field Web Resources"
  >
    <resource
      type="download"
      name="StructuredField.css"
      location="/css/StructuredField.css"
    />
  </web-resource>

</atlassian-plugin>
